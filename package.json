{
  "name": "jsoncrack-monorepo",
  "private": true,
  "license": "Apache-2.0",
  "homepage": "https://jsoncrack.com",
  "version": "0.0.0",
  "description": "Seamlessly visualize your JSON data instantly into graphs",
  "author": {
    "name": "Aykut Sara√ß",
    "email": "aykutsarac0@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/AykutSarac/jsoncrack.com/issues"
  },
  "main": "electron/main.js",
  "scripts": {
    "dev": "turbo run dev",
    "dev:www": "turbo run dev --filter=www",
    "dev:vscode": "turbo run watch-build --filter=vscode",
    "build": "turbo run build",
    "build:www": "turbo run build --filter=www",
    "build:vscode": "turbo run build --filter=vscode",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "lint:vscode": "turbo run lint --filter=vscode",
    "lint:fix": "turbo run lint:fix",
    "lint:fix:vscode": "turbo run lint:fix --filter=vscode",
    "analyze": "turbo run analyze",
    "clean": "turbo run clean",
    "electron:dev": "turbo run build && electron .",
    "electron:build": "turbo run build && electron-builder",
    "electron:build:win": "turbo run build && electron-builder --win",
    "electron:build:mac": "turbo run build && electron-builder --mac",
    "electron:build:linux": "turbo run build && electron-builder --linux",
    "electron:build:all": "turbo run build && electron-builder --win --linux"
  },
  "devDependencies": {
    "turbo": "^2.8.8"
  },
  "packageManager": "pnpm@10.20.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "unrs-resolver"
    ],
    "overrides": {
      "@types/react": "19.2.11",
      "@types/react-dom": "19.2.3",
      "html-to-image": "1.11.11",
      "jq-web": "0.5.1"
    }
  }
}
